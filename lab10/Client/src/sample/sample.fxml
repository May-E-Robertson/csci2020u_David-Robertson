<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="10" vgap="10">

    <TextField fx:id="Username:"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <TextField fx:id="Message:"
               GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <Label text="Username"
           GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="194.0"/>

    <Label text="Message"
           GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="194.0"/>

    <Button
            fx:id="refresh" text="Refresh" onAction="#refresh"
            GridPane.columnIndex="10" GridPane.rowIndex="2" prefWidth="194.0"/>
    <Button
            fx:id="download" text="Download" onAction="#download"
            GridPane.columnIndex="10" GridPane.rowIndex="3" prefWidth="194.0"/>
    <Button
            fx:id="upload" text="Upload" onAction="#upload"
            GridPane.columnIndex="10" GridPane.rowIndex="4" prefWidth="194.0"/>
    <Button
            fx:id="preview" text="Preview Selected Local File" onAction="#preview"
            GridPane.columnIndex="10" GridPane.rowIndex="0" prefWidth="194.0"/>
    <TextArea
        fx:id="previewArea"
        GridPane.columnIndex="10" GridPane.rowIndex="1" prefWidth="194.0"/>

</GridPane>